<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>listComputer</servlet-name>
        <servlet-class>Servlet.ListComputerServlet</servlet-class>

        <description>Ma première servlet de Servlet.ListComputerServlet.</description>

        <init-param>
            <param-name>auteur</param-name>
            <param-value>Coyote</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>listCompany</servlet-name>
        <servlet-class>Servlet.ListCompanyServlet</servlet-class>

        <description>Servlet manages creation of new computers in the database</description>

        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>getComputer</servlet-name>
        <servlet-class>Servlet.GetComputerServlet</servlet-class>

        <description>Ma première servlet de Servlet.ListComputerServlet.</description>

        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>createCompany</servlet-name>
        <servlet-class>Servlet.CreateCompanyServlet</servlet-class>

        <description>Servlet manages creation of new companies in the database</description>

        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>getCompany</servlet-name>
        <servlet-class>Servlet.GetCompanyServlet</servlet-class>

        <description>Display for companies in the database</description>

        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>createComputer</servlet-name>
        <servlet-class>Servlet.CreateComputerServlet</servlet-class>

        <description>Servlet manages creation of new computers in the database</description>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>updateComputer</servlet-name>
        <servlet-class>Servlet.UpdateComputerServlet</servlet-class>

        <description>Servlet manages creation of new computers in the database</description>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>Servlet.HomeServlet</servlet-class>

        <description>Servlet manages creation of new computers in the database</description>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>about</servlet-name>
        <servlet-class>Servlet.AboutServlet</servlet-class>

        <description></description>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>listComputer</servlet-name>
        <url-pattern>/listComputer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>listCompany</servlet-name>
        <url-pattern>/listCompany</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>getComputer</servlet-name>
        <url-pattern>/getComputer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>getCompany</servlet-name>
        <url-pattern>/getCompany</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>createCompany</servlet-name>
        <url-pattern>/createCompany</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>createComputer</servlet-name>
        <url-pattern>/createComputer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>about</servlet-name>
        <url-pattern>/Apropos</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>updateComputer</servlet-name>
        <url-pattern>/updateComputer</url-pattern>
    </servlet-mapping>

</web-app>